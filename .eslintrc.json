{
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "out/", "docs/"]
}

