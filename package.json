{
  "name": "snapask",
  "version": "0.3.0",
  "description": "AI-powered screenshot assistant for macOS",
  "main": "out/main/index.js",
  "homepage": "./",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "dist": "npm run build && electron-builder --mac --publish never",
    "dist:publish": "npm run build && electron-builder --mac --publish always",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,css,html}\""
  },
  "keywords": [
    "electron",
    "screenshot",
    "ai",
    "macos"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "build": {
    "appId": "com.snapask.app",
    "productName": "SnapAsk",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/image4.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/icons",
        "to": "resources/icons"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "snapask",
      "private": true
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json}": [
      "prettier --write"
    ]
  }
}
