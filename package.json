{
  "name": "snapask",
  "version": "0.3.0",
  "description": "AI-powered screenshot assistant for macOS",
  "main": "out/main/index.js",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,css,html}\""
  },
  "keywords": [
    "electron",
    "screenshot",
    "ai",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^28.0.0",
    "electron-vite": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "build": {
    "mac": {
      "icon": "resources/icons/image2.icns"
    },
    "extraResources": [
      {
        "from": "resources/icons",
        "to": "resources/icons"
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md,json}": [
      "prettier --write"
    ]
  }
}
